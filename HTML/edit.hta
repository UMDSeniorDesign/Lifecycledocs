				var index = cookiearray[(cookiearray.length)-1];
				var i = parseInt(index);									/* Changes index from 'string' to 'int' */
				var n = cookiearray[i].split('=')[0];
				var v = cookiearray[i].split('=')[1];
				
				name.innerHTML = n;
				text.value = v;
			}
		</script>
		
