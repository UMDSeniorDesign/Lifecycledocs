<html>
    <head>
        <HTA:APPLICATION
		border="thin"
		borderStyle="normal"
		caption="yes"
		maximizeButton="yes"
		minimizeButton="yes"
		showInTaskbar="no"
		windowState="maximize"
		innerBorder="yes"
		navigable="yes"
		scroll="auto"
		scrollFlat="yes" /> 

		<script src="../JS/loadXML.js"></script>
		<script src="../JS/saveXML.js"></script>
		<script src="../JS/sessionvars.js"></script>
		<script src="../JS/jQuery.js"></script>
				
		<script>
			function openProject() {	
				var v = document.getElementById("browse").value;
				
				var varray = v.split("\\");
				
				//alert(varray[varray.length-1]);
				sessvars.projectName = varray[varray.length-1];
				document.location.href = 'view.hta';
			}
		</script>
		
		<script>
			function createProject() {
				var projectName = prompt("New Project Name: ", "");
						
				var fso = new ActiveXObject("Scripting.FileSystemObject");
				//fso.CopyFile("\Lifecycledocs\Projects\test.xml", "\Lifecycledocs\Projects\\"+projectName+".xml", 1);
				var f = fso.GetFile("C:\\*\\Lifecycledocs\\Projects\\test.xml");
				alert(f);
				sessvars.projectName = projectName+".xml";
				document.location.href = 'view.hta';
			}
		</script>
		
    </head>
        
<title>Lifecycle Documents</title>
    <body>
    <center>
        <div id="wrapper">
            <div id ="head">
                <div id="siteControl">
                    <!-- <a href="#">Click Me</a> <br> -->
                    <button id="create" onclick=createProject()>New Project</button>
                    <button id="open" onclick=openProject()>Open Project</button>
					<input id="browse" type="file">
                </div>
            </div>
        </div>
        </center>
    </body>
</html>
